<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/layout_rcv_msg"
        android:background="@drawable/message_left_fill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:visibility="gone">
        <TextView
            android:id="@+id/textview_rcv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#ffff"
            android:layout_margin="3dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_snd_msg"
        android:background="@drawable/message_right_fill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:visibility="gone">
        <TextView
            android:id="@+id/textview_snd_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#ffff"
            android:layout_margin="3dp" />
    </LinearLayout>

</FrameLayout>